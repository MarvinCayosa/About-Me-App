<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3EBE2"
    >
<RelativeLayout
    android:id="@+id/frame_outer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <TextView
        android:id="@+id/txt_music_header"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:text="@string/music_header"
        android:fontFamily="@font/nimbus"
        android:layout_marginStart="15dp"
        android:textColor="@color/dark"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="-15sp"
        android:textSize="60dp"
        android:animation="@anim/fade_in"
    />
    <TextView
        android:id="@+id/txt_music_desc"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/txt_music_header"
        android:text="@string/music_subtxt"
        android:fontFamily="@font/nimbus"
        android:textColor="@color/dark"
        android:textSize="9dp"
        />
    <TextView
        android:id="@+id/txt_top4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/txt_music_desc"
        android:text="My Top 6 Songs"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/nimbus"
        android:textSize="30sp"
        android:textColor="@color/dark"
        />


    <RelativeLayout
        android:id="@+id/frame_sub"
        android:layout_width="match_parent"
        android:layout_marginTop="260dp"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_top1"
        android:layout_width="102dp"
        android:layout_height="235dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/mytop1"
 />

    <ImageView
        android:id="@+id/img_top2"
        android:layout_width="102dp"
        android:layout_height="235dp"
        android:layout_toEndOf="@+id/img_top1"
        android:layout_marginTop="15dp"
        android:src="@drawable/mytop2"
        android:layout_marginStart="9dp"
        />

    <ImageView
        android:id="@+id/img_top3"
        android:layout_width="102dp"
        android:layout_height="235dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/img_top2"
        android:src="@drawable/mytop3"
        />

    <ImageView
        android:id="@+id/img_top4"
        android:layout_width="102dp"
        android:layout_height="235dp"
        android:layout_below="@id/img_top1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/mytop4"
        />

    <ImageView
        android:id="@+id/img_top5"
        android:layout_width="102dp"
        android:layout_height="235dp"
        android:layout_below="@id/img_top1"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/img_top4"
        android:src="@drawable/mytop5" />
    <ImageView
        android:id="@+id/img_top6"
        android:layout_width="102dp"
        android:layout_height="235dp"
        android:layout_below="@id/img_top1"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/img_top5"
        android:src="@drawable/mytop6" />

        <ImageView
            android:id="@+id/img_follow"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_below="@id/img_top6"
            android:layout_marginTop="25dp"
            android:src="@drawable/follow" />

        <ImageButton
            android:id="@+id/btn_to_profile"
            android:layout_width="192dp"
            android:layout_height="20dp"
            android:layout_below="@id/img_top6"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/followbtn" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/img_follow"
            android:layout_marginTop="-20dp"


            android:src="@drawable/divider" />



        <TextView
            android:id="@+id/txt_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_follow"
            android:text="My Genres."
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/nimbus"
            android:textSize="45dp"
            android:textColor="@color/dark"
            />
        <TextView
            android:id="@+id/txt_music_genre"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_genre"
            android:text="@string/genres_intro"
            android:fontFamily="@font/nimbus"
            android:textColor="@color/dark"
            android:textSize="8dp"
            />

        <ImageView
            android:id="@+id/img_genres"
            android:layout_width="310dp"
            android:layout_height="259dp"
            android:layout_below="@id/txt_music_genre"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/genrebar" />


        <TextView
            android:id="@+id/txt_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_genres"
            android:text="My Playlist."
            android:layout_marginStart="15dp"
            android:fontFamily="@font/nimbus"
            android:layout_marginTop="30dp"
            android:textSize="45dp"
            android:textColor="@color/dark"
            />
        <TextView
            android:id="@+id/txt_playlist_desc"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_playlist"
            android:text="@string/playlist"
            android:fontFamily="@font/nimbus"
            android:textColor="@color/dark"
            android:textSize="8dp"
            />
        <WebView
            android:id="@+id/web_playlist1"
            android:layout_below="@id/txt_playlist_desc"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_height="152dp"
            tools:ignore="WebViewLayout" />

        <WebView
            android:id="@+id/web_playlist2"
            android:layout_below="@id/web_playlist1"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_height="152dp"
            android:layout_marginBottom="60dp"
            tools:ignore="WebViewLayout" />

    </RelativeLayout>

</RelativeLayout>
</ScrollView>